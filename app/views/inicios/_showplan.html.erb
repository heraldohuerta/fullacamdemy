    <% as.contents.each do |co| %>
    <p class='pl-1 m-0'>Contenido:<%= co.nombre %></p>
    <p class='pl-2 m-0'>Pruebas</p>
    <ol>
      <% co.tests.each do |te| %>
      <li class='ml-4 mt-0'><%= te.nombre %></li>
      <% end %>
    </ol>
    <% end %>
    <% end %>
  </div>

</div>
