<% @panel.each do |panel| %>

<div class="card-body text-center">
  <h1 class="card-title"><%= panel.plan.descripcion %></h1>
  <hr>
  <div class = "text-left">

    <% panel.plan.plans_options.each do |po| %>
    <div class="row">
      <div class="col-sm-2">
        <%= po.option.codigo %>
      </div>
      <div class="col-sm-6">
        <%= po.option.descripción %>
      </div>
      <div class="col-sm-2">
        <%= po.option.cantidad %>
      </div>
      <div class="col-sm-2">
        <%= po.option.unit.codigo %>
      </div>
    </div>
    <% end %>
  </end>
</div>

<% panel.plan.course_plans.each do |cp| %>
<hr>
<div class="row mt-3">
  <div class="col-sm-3">
    <h3 class="card-text text-danger"><%= cp.course.nombre %></h3>
    <img class="card-img-top" src="<%= cp.course.firmware_image %>" alt="Card image cap">
  </div>
  <div class="col-sm-5 text-left">
    <% cp.course.asignaturs.each do |as| %>
    <p  class='m-0'>Asignatura:<%= as.nombre %></p>
    <br>
    <% as.contents.each do |co| %>
    <p class='pl-1 m-0'>Contenido:<%= co.nombre %></p> <%= link_to "Información", co.url_file ,class:'btn btn-warning text-white' %>
    <p class='pl-2 m-0'>Pruebas</p>
    <ol>
      <% co.tests.each do |te| %>
      <li class='ml-4 mt-0'><%= link_to te.nombre, test_students_path(te.id) ,data: { remote: true },class:'btn btn-info text-white' %></li>
      <% end %>
    </ol>
    <% end %>
    <% end %>
  </div>
</div>
<% end %>
</div>
<% end %>



<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLongTitle">Prueba</h1>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="form_edit">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
